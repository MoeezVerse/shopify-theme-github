{% schema %}
{
  "name": "Image With Promo Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Side Image"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "heading_title",
      "label": "Heading Title",
      "default": "Limited Offer"
    },
    {
      "type": "textarea",
      "id": "heading_text",
      "label": "Subheading Text",
      "default": "We're currently going viral on social media and have very limited stock remaining for our New Year Sale!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Buy 1, Get 1 FREE"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "warning_text",
      "label": "Warning Text",
      "default": "Sell out risk: HIGH | Already sold out 7 times last year"
    }
  ],
  "presets": [
    {
      "name": "Ev Image With Promo Text"
    }
  ]
}
{% endschema %}

<style>
  .Ev-promo-wrapper {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    border-radius: 20px;
    overflow: hidden;
  }

  .Ev-left {
    flex: 1 1 50%;
    min-width: 300px;
  }

  .Ev-left img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .Ev-right {
    flex: 1 1 50%;
    background-color: #fcbefc;
    padding: 40px;
    text-align: center;
  }

  .Ev-logo {
    margin-bottom: 20px;
    max-width: 150px;
  }

  .Ev-heading {
    font-size: 36px;
    font-weight: 700;
    margin: 10px 0;
  }

  .Ev-subheading {
    font-size: 16px;
    margin-bottom: 30px;
    line-height: 1.5;
    color: #333;
  }

  .Ev-button {
    background-color: #23002e;
    color: white;
    padding: 12px 28px;
    border-radius: 30px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    margin-bottom: 20px;
  }

  .Ev-button:hover {
    background-color: white;
    color: #23002e;
    border: 1px solid #23002e;
  }

  .Ev-warning {
    color: #ff2d2d;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .Ev-warning::before {
    content: "ðŸ”´";
    display: inline-block;
    font-size: 16px;
  }

  @media screen and (max-width: 768px) {
    .Ev-promo-wrapper {
      flex-direction: column;
    }

    .Ev-right {
      padding: 30px 20px;
    }

    .Ev-heading {
      font-size: 28px;
    }
  }
</style>

<div class="Ev-promo-wrapper">
  <div class="Ev-left">
    {% if section.settings.left_image %}
      <img src="{{ section.settings.left_image | image_url: width: 800 }}" alt="Promo Image">
    {% endif %}
  </div>
  <div class="Ev-right">
    {% if section.settings.logo_image %}
      <img class="Ev-logo" src="{{ section.settings.logo_image | image_url: width: 200 }}" alt="Logo">
    {% endif %}
    <h2 class="Ev-heading">{{ section.settings.heading_title }}</h2>
    <p class="Ev-subheading">{{ section.settings.heading_text }}</p>
    {% if section.settings.button_url %}
      <a class="Ev-button" href="{{ section.settings.button_url }}">{{ section.settings.button_label }}</a>
    {% endif %}
    <div class="Ev-warning">{{ section.settings.warning_text }}</div>
  </div>
</div>
