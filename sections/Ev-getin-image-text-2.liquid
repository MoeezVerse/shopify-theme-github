{% schema %}
{
  "name": "Ev - Viral Promo Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Side Image"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "heading_title",
      "label": "Heading Title",
      "default": "Limited Offer"
    },
    {
      "type": "textarea",
      "id": "heading_text",
      "label": "Subheading Text",
      "default": "We're currently going viral on social media and have very limited stock remaining for our New Year Sale!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Buy 1, Get 1 FREE"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "warning_text",
      "label": "Warning Text",
      "default": "Sell out risk: HIGH | Already sold out 7 times last year"
    }
  ],
  "presets": [
    {
      "name": "Ev - Viral Promo Section"
    }
  ]
}
{% endschema %}

<style>
  .Ev-wrapper {
    display: flex;
    flex-wrap: wrap;
    border-radius: 20px;
    overflow: hidden;
    max-width: 1400px;
    margin: 10px auto;
  }

  .Ev-left {
    flex: 1 1 50%;
  }

  .Ev-left img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .Ev-right {
    flex: 1 1 50%;
    background-color: #f9cafa;
    display: flex;
    gap: 6px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .Ev-logo {
    max-width: 160px;
    margin-bottom: 10px;
  }

  .Ev-heading {
    font-size: 42px;
    font-weight: 400;
    margin: 0px;
    line-height: 1.1;
  }

  .Ev-subheading {
    font-size: 18px;
    line-height: 1.6;
    max-width: 500px;
    margin-bottom: 20px;
    font-weight: 400;
    margin-top: 10px;
    color: #361b3b;
  }

  .Ev-button {
    background-color: #2b0036;
    color: #fff;
    padding: 12px 32px;
    border-radius: 30px;
    font-size: 18px;
    font-weight: 400;
    text-decoration: none;
    transition: 0.3s;
    margin-bottom: 18px;
    min-width: 280px;
  }

  .Ev-button:hover {
    background-color: #fff;
    color: #2b0036;
    border: 1px solid #2b0036;
  }

  .Ev-warning {
    font-size: 14px;
    color: #ff3c3c;
    display: flex;
    align-items: center;
    gap: 8px;
    text-align: center;
  }

  .Ev-warning::before {
    content: '';
    width: 10px;
    height: 10px;
    background-color: red;
    border-radius: 50%;
    box-shadow: 0 0 8px red;
    display: inline-block;
  }

   @media screen and (max-width: px) {
     .Ev-wrapper {
      flex-direction: column;
      border-radius: 0px;
    }
   .Ev-right {
     padding: 20px 10px;
   }
   }
  @media screen and (max-width: 768px) {
    .Ev-wrapper {
      flex-direction: column;
      border-radius: 0px;
    }

    .Ev-left,
    .Ev-right {
      flex: 1 1 100%;
    }

    .Ev-right {
      padding: 40px 20px;
    }

    .Ev-heading {
      font-size: 28px;
    }

    .Ev-subheading {
      font-size: 16px;
    }

    .Ev-logo {
      max-width: 130px;
    }
  }
</style>

<div class="Ev-wrapper">
  <div class="Ev-left">
    {% if section.settings.left_image %}
      <img src="{{ section.settings.left_image | image_url: width: 800 }}" alt="Promo Image">
    {% endif %}
  </div>
  <div class="Ev-right">
    {% if section.settings.logo_image %}
      <img class="Ev-logo" src="{{ section.settings.logo_image | image_url: width: 200 }}" alt="Logo">
    {% endif %}
    <h2 class="Ev-heading">{{ section.settings.heading_title }}</h2>
    <p class="Ev-subheading">{{ section.settings.heading_text }}</p>
    {% if section.settings.button_label %}
      <a href="{{ section.settings.button_url }}" class="Ev-button">{{ section.settings.button_label }}</a>
    {% endif %}
    <div class="Ev-warning">{{ section.settings.warning_text }}</div>
  </div>
</div>
