{% schema %}
{
  "name": "Image with Text",
  "settings": [
    {
      "type": "header",
      "content": "Media Settings"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "url",
      "id": "left_video_url",
      "label": "Left Video URL (optional)"
    },
    {
      "type": "select",
      "id": "media_position",
      "label": "Media Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "number_icon",
      "label": "Number Icon",
      "default": "1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Most Comfortable Solution for a Bloat-Free Belly"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Bloating happens to the best of us, but with HeyShape Shapewear, you can smooth and flatten your midsection instantly without any discomfort and effort."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Buy 1, Get 1 FREE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Style Settings"
    },
    {
      "type": "color",
      "id": "number_icon_bg",
      "label": "Number Icon Background",
      "default": "#D6B1F8"
    },
    {
      "type": "color",
      "id": "number_icon_color",
      "label": "Number Icon Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "number_icon_size",
      "label": "Number Icon Size",
      "min": 20,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 40
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size",
      "min": 12,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 28
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#555555"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#3b004b"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_bg",
      "label": "Button Hover Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_text",
      "label": "Button Hover Text Color",
      "default": "#3b004b"
    },
    {
      "type": "range",
      "id": "button_radius",
      "label": "Button Border Radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 25
    },
    {
      "type": "range",
      "id": "button_padding",
      "label": "Button Padding",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section Padding",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "media_width",
      "label": "Media Width (Desktop)",
      "min": 30,
      "max": 70,
      "step": 5,
      "unit": "%",
      "default": 45
    },
    {
      "type": "checkbox",
      "id": "enable_border_radius",
      "label": "Enable Media Border Radius",
      "default": true
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Media Border Radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "Image with Text",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
.bloat-section {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  padding: {{ section.settings.section_padding }}px 20px;
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.bloat-left, .bloat-right {
  flex: 0 1 {{ section.settings.media_width }}%;
}

.bloat-left img,
.bloat-left video {
  max-width: 600px;
  width: 100%;
  border-radius: {% if section.settings.enable_border_radius %}{{ section.settings.border_radius }}px{% else %}0{% endif %};
  object-fit: contain;
  display: block;
}

.bloat-right .number-icon {
  width: {{ section.settings.number_icon_size }}px;
  height: {{ section.settings.number_icon_size }}px;
  background: {{ section.settings.number_icon_bg }};
  color: {{ section.settings.number_icon_color }};
  font-weight: bold;
  border-radius: 50%;
  text-align: center;
  line-height: {{ section.settings.number_icon_size }}px;
  margin-bottom: 15px;
  font-size: calc({{ section.settings.number_icon_size }}px * 0.5);
}

.bloat-right h2 {
  font-size: {{ section.settings.heading_size }}px;
  font-weight: 700;
  margin-bottom: 15px;
  color: {{ section.settings.heading_color }};
  line-height: 1.3;
}

.bloat-right p {
  font-size: {{ section.settings.text_size }}px;
  color: {{ section.settings.text_color }};
  margin-bottom: 20px;
  max-width: 600px;
  line-height: 1.5;
}

.bloat-right a.button {
  background: {{ section.settings.button_bg }};
  color: {{ section.settings.button_text_color }};
  padding: {{ section.settings.button_padding }}px calc({{ section.settings.button_padding }}px * 2);
  border-radius: {{ section.settings.button_radius }}px;
  text-decoration: none;
  transition: all 0.3s ease;
  display: inline-block;
  border: 1px solid {{ section.settings.button_bg }};
  outline: none; /* Remove focus outline */
  box-shadow: none; /* Remove any potential shadow */
}

.bloat-right a.button:hover,
.bloat-right a.button:focus {
  background: {{ section.settings.button_hover_bg }};
  color: {{ section.settings.button_hover_text }};
  border-color: {{ section.settings.button_hover_text }};
  outline: none; /* Ensure no outline appears on hover/focus */
}

/* Media position swap */
{% if section.settings.media_position == 'right' %}
  .bloat-section {
    flex-direction: row-reverse;
  }
{% endif %}

/* Responsive styles */
@media (max-width: 768px) {
  .bloat-section {
    flex-direction: column;
    text-align: center;
    padding: {{ section.settings.section_padding | divided_by: 2 }}px 15px;
  }
  
  .bloat-left, .bloat-right {
    flex: 1 1 100%;
  }
  
  .bloat-right .number-icon,
  .bloat-right h2,
  .bloat-right p {
    margin-left: auto;
    margin-right: auto;
  }
  
  .bloat-right p {
    max-width: 100%;
  }
  
  {% if section.settings.media_position == 'right' %}
    .bloat-section {
      flex-direction: column;
    }
  {% endif %}
}

@media (max-width: 480px) {
  .bloat-right h2 {
    font-size: calc({{ section.settings.heading_size }}px * 0.8);
  }
  
  .bloat-right p {
    font-size: calc({{ section.settings.text_size }}px * 0.9);
  }
  
  .bloat-right a.button {
    width: 100%;
    text-align: center;
  }
}
{% endstyle %}

<section class="bloat-section">
  <div class="bloat-left">
    {% if section.settings.left_video_url != blank %}
      <video controls muted playsinline>
        <source src="{{ section.settings.left_video_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% elsif section.settings.left_image != blank %}
      <img src="{{ section.settings.left_image | img_url:'master' }}" alt="Before and After">
    {% endif %}
  </div>
  <div class="bloat-right">
    {% if section.settings.number_icon != blank %}
      <div class="number-icon">{{ section.settings.number_icon }}</div>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.description != blank %}
      <div class="ev-product-description">
        <p>{{ section.settings.description }}</p>
      </div>
    {% endif %}
    {% if section.settings.button_text != blank %}
      <a class="button" href="{{ section.settings.button_link | default: '#' }}">
         <button class="button" type="button">
            {{ section.settings.button_text }}
          </button>
      </a>
    {% endif %}
  </div>
</section>