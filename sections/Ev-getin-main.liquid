{% schema %}
{
  "name": "Ev Confidence Promo",
  "tag": "section",
  "class": "Ev-main-confidence-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "trust_image",
      "label": "Trust Icon Image"
    },
    {
      "type": "text",
      "id": "review_text",
      "label": "Review Text",
      "default": "9507 Reviews"
    },
    {
      "type": "image_picker",
      "id": "star_icon",
      "label": "Star Rating Image"
    },
    {
      "type": "text",
      "id": "heading_prefix",
      "label": "Heading Highlighted Text",
      "default": "7 Reasons"
    },
    {
      "type": "text",
      "id": "heading_main",
      "label": "Main Heading Text",
      "default": "Why Over 1,000,000 Women Worldwide Are Choosing HeyShape as Their Ultimate Confidence Secret."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Say goodbye to the stress of squeezing into your favorite jeans or dress. Boost your confidence, embrace your uniqueness, and enjoy feeling comfortable in your own skin."
    },
    {
      "type": "image_picker",
      "id": "offer_text_top_icon",
      "label": "offer text top Icon"
    },
    {
      "type": "text",
      "id": "offer_text_top",
      "label": "Offer Text Top",
      "default": "We've got a personalized limited-time offer for you."
    },
    {
      "type": "text",
      "id": "offer_text_bottom",
      "label": "Offer Text Bottom",
      "default": "Buy 1 & Get 1 Free"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "CLAIM SPECIAL DEAL"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Model Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "360° Snatch"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ev Confidence Promo",
      "category": "Custom Sections",
      "blocks": [
        { "type": "feature", "settings": { "text": "360° Snatch" } },
        { "type": "feature", "settings": { "text": "Incredibly Soft" } },
        { "type": "feature", "settings": { "text": "Snap/hook Closure" } },
        { "type": "feature", "settings": { "text": "Breathable" } },
        { "type": "feature", "settings": { "text": "Keep it cooling" } }
      ]
    }
  ]
}
{% endschema %}

{% style %}
.Ev-main-confidence-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32px;
  margin: 20px auto;
  max-width: 1400px;
}
.Ev-main-trust-bar {
  display: flex;
  align-items: center;
  gap: 4px 10px;
  justify-content: flex-start;
}
.Ev-main-trust-bar img {
  height: 24px;
}
.Ev-main-heading {
  font-size: 42px;
  letter-spacing: -.005em;
  font-weight: 450;
  line-height: 1.3;
  margin-bottom: 12px;
  margin: 0px;
}
.Ev-main-heading span {
  color: #d299ff;
  font-weight: 700;
}
.Ev-main-description {
    color: #404040;
    font-size: 18px;
    letter-spacing: -.015em;
    font-weight: 400;
    line-height: 1.3;
    margin-top: 0px;
}
.Ev-main-left {
    display: flex;
    flex-direction: column;
    gap: 5px;
    flex-basis: 60%;
}
.Ev-main-right {
    flex-basis: 40%;
}
.Ev-main-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-bottom: 10px;
}
.Ev-main-feature-block {
    width: fit-content;
    display: flex;
    align-items: center;
    gap: 10px;
    text-align: start;
    background-color: #fceeff;
    padding: 8px 12px;
    border-radius: 16px;
    font-size: 14px;
}
.Ev-main-feature-block img {
    width: 22px;
    height: 22px;
}
.Ev-main-offer {
    background: #f5c5ff;
    color: #370042;
    padding: 12px 16px;
    border-radius: 16px;
    margin-bottom: 5px;
    text-align: center;
    align-items: center;
    display: flex;
    gap: 8px;
    flex-direction: column;
}
.Ev-main-offer p {
  margin: 4px 0;
}
.Ev-main-offer strong {
  font-weight: 700;
}
.Ev-main-button {
  background-color: #2b003b;
  color: #fff;
  padding: 14px 32px;
  border-radius: 30px;
  font-size: 16px;
  font-weight: 400;
  display: inline-block;
  transition: 0.3s;
  width: 100%;
  text-decoration: none;
  text-align: center;
}
.Ev-main-button:hover {
  background-color: #44005e;
}


.Ev-main-right img {
    max-height: 650px;
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 10px;
    aspect-ratio: 0.8;
    object-position: center;
    vertical-align: bottom;
}

.landing-hero__note-description {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}
.landing-hero__note-description img {
    width: 20px;
}
.Ev-main-offer p {
    margin: 4px 0;
    font-size: 16px;
    letter-spacing: -.01em;
    color: #370042;
    font-weight: 400;
    line-height: 1.4;
}
.Ev-main-offer p.landing-hero__note-main {
    color: #370042;
    font-weight: 500;
    line-height: 1.25;
    font-size: 18px;
    margin: 0px;
}

@media (min-width: 1024px) {
  .Ev-main-confidence-section {
     padding: 20px 32px 0px 32px;
  }
}
@media (max-width: 780px) {
  .Ev-main-confidence-section {
    flex-direction: column-reverse;
    padding: 24px 16px 0px 16px;
    margin: 0px;
  }

  .Ev-main-left, .Ev-main-right {
    max-width: 100%;
  }

  .Ev-main-heading {
    font-size: 28px;
  }

  .Ev-main-description {
    font-size: 16px;
  }
}
@media (max-width: 440px) {
  .Ev-main-trust-bar img {
    height: 20px;
  }
  .Ev-main-offer p {
    font-size: 13px;
  }
}
{% endstyle %}


<div class="Ev-main-confidence-section">
  <div class="Ev-main-left">
    <div class="Ev-main-trust-bar">
      {% if section.settings.trust_image %}
        <img src="{{ section.settings.trust_image | image_url }}" alt="Trust Icon">
      {% endif %}
      <span>{{ section.settings.review_text }}</span>
      {% if section.settings.star_icon %}
        <img src="{{ section.settings.star_icon | image_url }}" alt="Stars">
      {% endif %}
    </div>

    <h2 class="Ev-main-heading">
      <span>{{ section.settings.heading_prefix }}</span>
      {{ section.settings.heading_main }}
    </h2>

    <p class="Ev-main-description">{{ section.settings.description }}</p>

    <div class="Ev-main-features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="Ev-main-feature-block">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | image_url }}" alt="Icon">
            {% endif %}
            <span>{{ block.settings.text }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="Ev-main-offer">
      <div class="landing-hero__note-description">
        {% if section.settings.offer_text_top_icon %}
          <img src="{{ section.settings.offer_text_top_icon | img_url:"master" }}" alt="Icon">
        {% endif %}
        <p>{{ section.settings.offer_text_top }}</p>
      </div>
      <p class="landing-hero__note-main">{{ section.settings.offer_text_bottom }}</p>
    </div>

    {% if section.settings.button_label %}
      <a href="{{ section.settings.button_url }}" class="Ev-main-button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

  <div class="Ev-main-right">
    {% if section.settings.right_image %}
      <img src="{{ section.settings.right_image | image_url }}" alt="Model">
    {% endif %}
  </div>
</div>
