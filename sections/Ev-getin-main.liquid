{% schema %}
{
  "name": "Ev Confidence Promo",
  "tag": "section",
  "class": "Ev-confidence-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "trust_image",
      "label": "Trust Review Image"
    },
    {
      "type": "text",
      "id": "review_text",
      "label": "Review Text",
      "default": "9507 Reviews"
    },
    {
      "type": "image_picker",
      "id": "star_icon",
      "label": "Star Icon Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "7 Reasons Why Over 1,000,000 Women Worldwide Are Choosing HeyShape"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Say goodbye to the stress of squeezing into your favorite jeans or dress. Boost your confidence, embrace your uniqueness, and enjoy feeling comfortable in your own skin."
    },
    {
      "type": "text",
      "id": "offer_text_top",
      "label": "Top Offer Text",
      "default": "We've got a personalized limited-time offer for you."
    },
    {
      "type": "text",
      "id": "offer_text_bottom",
      "label": "Bottom Offer Text",
      "default": "Buy 1 & Get 1 Free"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "CLAIM SPECIAL DEAL"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "360° Snatch"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ev Confidence Promo",
      "category": "Promotional",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "text": "360° Snatch"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Incredibly Soft"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Snap/hook Closure"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Breathable"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "Keep it cooling"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
.Ev-confidence-section {
  padding: 40px 20px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.Ev-left,
.Ev-right {
  flex: 1 1 100%;
  max-width: 100%;
  padding: 20px;
}
@media (min-width: 768px) {
  .Ev-left,
  .Ev-right {
    flex: 1 1 50%;
    max-width: 50%;
  }
}
.Ev-trust {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 16px;
}
.Ev-heading {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 12px;
}
.Ev-description {
  font-size: 16px;
  margin-bottom: 20px;
}
.Ev-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-bottom: 24px;
}
.Ev-feature-item {
  display: flex;
  align-items: center;
  gap: 8px;
  background: #f3e1ff;
  padding: 10px 14px;
  border-radius: 16px;
  font-size: 14px;
}
.Ev-feature-item img {
  height: 20px;
  width: 20px;
}
.Ev-offer {
  background: #fbd5ff;
  padding: 10px 16px;
  border-radius: 8px;
  margin-bottom: 20px;
  font-size: 14px;
}
.Ev-offer p {
  margin: 0;
  text-align: center;
}
.Ev-button {
  display: inline-block;
  background: #2b003b;
  color: #fff;
  padding: 14px 32px;
  border-radius: 30px;
  text-align: center;
  font-weight: 600;
  font-size: 16px;
  transition: 0.3s ease;
}
.Ev-button:hover {
  background: #47085f;
}
.Ev-right img {
  max-width: 100%;
  border-radius: 8px;
}
{% endstyle %}

<div class="Ev-confidence-section">
  <div class="Ev-left">
    <div class="Ev-trust">
      {% if section.settings.trust_image %}
        <img src="{{ section.settings.trust_image | image_url }}" alt="Trust">
      {% endif %}
      <span>{{ section.settings.review_text }}</span>
      {% if section.settings.star_icon %}
        <img src="{{ section.settings.star_icon | image_url }}" alt="Stars" style="height: 20px;">
      {% endif %}
    </div>

    <h2 class="Ev-heading">{{ section.settings.heading }}</h2>
    <p class="Ev-description">{{ section.settings.description }}</p>

    <div class="Ev-features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="Ev-feature-item">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | image_url }}" alt="Icon">
            {% endif %}
            <span>{{ block.settings.text }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="Ev-offer">
      <p>{{ section.settings.offer_text_top }}</p>
      <p><strong>{{ section.settings.offer_text_bottom }}</strong></p>
    </div>

    {% if section.settings.button_url %}
      <a href="{{ section.settings.button_url }}" class="Ev-button">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>

  <div class="Ev-right">
    {% if section.settings.right_image %}
      <img src="{{ section.settings.right_image | image_url }}" alt="Main Visual">
    {% endif %}
  </div>
</div>
