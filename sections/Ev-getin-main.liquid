{% schema %}
{
  "name": "Ev Confidence Promo",
  "tag": "section",
  "class": "Ev-main-confidence-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "trust_image",
      "label": "Trust Icon Image"
    },
    {
      "type": "text",
      "id": "review_text",
      "label": "Review Text",
      "default": "9507 Reviews"
    },
    {
      "type": "image_picker",
      "id": "star_icon",
      "label": "Star Rating Image"
    },
    {
      "type": "text",
      "id": "heading_prefix",
      "label": "Heading Highlighted Text",
      "default": "7 Reasons"
    },
    {
      "type": "text",
      "id": "heading_main",
      "label": "Main Heading Text",
      "default": "Why Over 1,000,000 Women Worldwide Are Choosing HeyShape as Their Ultimate Confidence Secret."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Say goodbye to the stress of squeezing into your favorite jeans or dress. Boost your confidence, embrace your uniqueness, and enjoy feeling comfortable in your own skin."
    },
    {
      "type": "text",
      "id": "offer_text_top",
      "label": "Offer Text Top",
      "default": "We've got a personalized limited-time offer for you."
    },
    {
      "type": "text",
      "id": "offer_text_bottom",
      "label": "Offer Text Bottom",
      "default": "Buy 1 & Get 1 Free"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "CLAIM SPECIAL DEAL"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Model Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "360° Snatch"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ev Confidence Promo",
      "category": "Custom Sections",
      "blocks": [
        { "type": "feature", "settings": { "text": "360° Snatch" } },
        { "type": "feature", "settings": { "text": "Incredibly Soft" } },
        { "type": "feature", "settings": { "text": "Snap/hook Closure" } },
        { "type": "feature", "settings": { "text": "Breathable" } },
        { "type": "feature", "settings": { "text": "Keep it cooling" } }
      ]
    }
  ]
}
{% endschema %}

{% style %}
.Ev-main-confidence-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px auto;
  max-width: 1400px;
}
.Ev-main-left, .Ev-main-right {
  flex: 1 1 100%;
  padding: 20px;
}
@media(min-width: 768px) {
  .Ev-main-left, .Ev-main-right {
    flex: 0 0 50%;
    max-width: 50%;
  }
}
.Ev-main-trust-bar {
  display: flex;
  align-items: center;
  gap: 4px 10px;
  justify-content: flex-start;
  margin-bottom: 16px;
}
.Ev-main-trust-bar img {
  height: 24px;
}
.Ev-main-heading {
  font-size: 42px;
  letter-spacing: -.005em;
  font-weight: 600;
  line-height: 1.3;
  margin-bottom: 12px;
}
.Ev-main-heading span {
  color: #d299ff;
  font-weight: 700;
}
.Ev-main-description {
  font-size: 16px;
  color: #444;
  margin-bottom: 24px;
}
.Ev-main-features {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-bottom: 24px;
}
.Ev-main-feature-block {
  display: flex;
  align-items: center;
  gap: 8px;
  background-color: #f3e1ff;
  padding: 8px 14px;
  border-radius: 20px;
  font-size: 14px;
}
.Ev-main-feature-block img {
  height: 16px;
  width: 16px;
}
.Ev-main-offer {
  background: #fcd6ff;
  padding: 12px 20px;
  border-radius: 8px;
  margin-bottom: 20px;
  text-align: center;
}
.Ev-main-offer p {
  margin: 4px 0;
}
.Ev-main-offer strong {
  font-weight: 700;
}
.Ev-main-button {
  background-color: #2b003b;
  color: #fff;
  padding: 14px 32px;
  border-radius: 30px;
  font-size: 16px;
  font-weight: 600;
  display: inline-block;
  transition: 0.3s;
  width: 100%;
  text-decoration: none;
  text-align: center;
}
.Ev-main-button:hover {
  background-color: #44005e;
}
.Ev-main-right img {
  width: 100%;
  border-radius: 10px;
}
{% endstyle %}

<div class="Ev-main-confidence-section">
  <div class="Ev-main-left">
    <div class="Ev-main-trust-bar">
      {% if section.settings.trust_image %}
        <img src="{{ section.settings.trust_image | image_url }}" alt="Trust Icon">
      {% endif %}
      <span>{{ section.settings.review_text }}</span>
      {% if section.settings.star_icon %}
        <img src="{{ section.settings.star_icon | image_url }}" alt="Stars">
      {% endif %}
    </div>

    <h2 class="Ev-main-heading">
      <span>{{ section.settings.heading_prefix }}</span>
      {{ section.settings.heading_main }}
    </h2>

    <p class="Ev-main-description">{{ section.settings.description }}</p>

    <div class="Ev-main-features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="Ev-main-feature-block">
            {% if block.settings.icon %}
              <img src="{{ block.settings.icon | image_url }}" alt="Icon">
            {% endif %}
            <span>{{ block.settings.text }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="Ev-main-offer">
      <p>{{ section.settings.offer_text_top }}</p>
      <p><strong>{{ section.settings.offer_text_bottom }}</strong></p>
    </div>

    {% if section.settings.button_label %}
      <a href="{{ section.settings.button_url }}" class="Ev-main-button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

  <div class="Ev-main-right">
    {% if section.settings.right_image %}
      <img src="{{ section.settings.right_image | image_url }}" alt="Model">
    {% endif %}
  </div>
</div>
