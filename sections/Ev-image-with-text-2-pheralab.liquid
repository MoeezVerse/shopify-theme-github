<section class="Ev-snoring-promo-section">
  <div class="Ev-promo-container">
    <div class="Ev-promo-text">
      <h2>{{ section.settings.heading }}</h2>
      <h3>{{ section.settings.subheading }}</h3>
      <div class="Ev-promo-description">
        {{ section.settings.description }}
      </div>
    </div>
    <div class="Ev-promo-images">
      {% if section.settings.product_image %}
        <img src="{{ section.settings.product_image | image_url }}" alt="Product Image" class="Ev-product-img" />
      {% endif %}
      {% if section.settings.badge_image %}
        <img src="{{ section.settings.badge_image | image_url }}" alt="Badge" class="Ev-badge-img" />
      {% endif %}
    </div>
  </div>
  <div class="Ev-mobile-icons">
  {% for block in section.blocks %}
    <div class="Ev-icon-item">
      {% if block.settings.icon %}
        <img src="{{ block.settings.icon | image_url }}" alt="Icon" class="Ev-icon-img" />
      {% endif %}
      <div class="Ev-icon-title">{{ block.settings.title }}</div>
      <div class="Ev-icon-text">{{ block.settings.text }}</div>
    </div>
  {% endfor %}
</div>
</section>

<style>
.Ev-snoring-promo-section {
  width: 90%;
  max-width: 1085px;
  margin: 0px auto 40px auto;
  background: #fff;
}
.Ev-mobile-icons {
  display: none;
}
.Ev-promo-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.Ev-promo-text {
  flex: 1 1 50%;
  padding: 20px;
}
.Ev-promo-text h2 {
  font-size: 60px;
  font-weight: 700;
  line-height: 72px;
  color: #0b1d3a;
  margin-bottom: 0.5rem;
}
.Ev-promo-text h3 {
    color: #004080;
    margin-bottom: 1rem;
    padding: 1px;
    font-size: 21px;
    font-weight: 600;
    line-height: 26px;
}
.Ev-promo-description {
  font-size: 18px;
  line-height: 24px;
  color: #222;
}
.Ev-promo-description strong {
  font-weight: 700;
}
.Ev-promo-images {
  flex: 1 1 40%;
  text-align: center;
  position: relative;
  padding: 20px;
}
.Ev-product-img {
  max-width: 100%;
  height: auto;
}
.Ev-badge-img {
  max-width: 150px;
  position: absolute;
  right: 0;
  bottom: -20px;
}
@media screen and (max-width: 769px) {
  .Ev-promo-container {
    flex-direction: column;
    text-align: center;
  }
  .Ev-promo-text,
  .Ev-promo-images {
    flex: 1 1 100%;
  }
  .Ev-badge-img {
    position: static;
    margin-top: 20px;
  }
  .Ev-mobile-icons {
    display: flex;
    justify-content: space-around;
    margin-top: 40px;
    gap: 20px;
    padding: 0 10px;
  }
  .Ev-icon-item {
    flex: 1 1 40%;
    text-align: center;
  }
  .Ev-icon-img {
    max-width: 50px;
    margin-bottom: 10px;
  }
  .Ev-icon-title {
    font-weight: 700;
    color: #0b1d3a;
    font-size: 1rem;
  }
  .Ev-icon-text {
    font-size: 0.875rem;
    color: #004080;
  }
}
</style>

{% schema %}
{
  "name": "Stop Snoring Promo",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stop Snoring Overnight"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "without changing your sleeping habits!"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>QuietLab is a <strong>comfortable</strong>, <strong>instantly effective</strong>, and <strong>fully adjustable</strong> mouthpiece that stops snoring at the source by gently positioning your lower jaw forward to keep your airway open, without you noticing.</p>"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge Image (e.g. Money Back Guarantee)"
    }
  ],
    "blocks": [
      {
        "type": "icon",
        "name": "Feature Icon",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Developed"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Subtext",
            "default": "by Top Italian Orthodontists"
          }
        ]
      }
    ],
  "presets": [
    {
      "name": "Stop Snoring Promo"
    }
  ]
}
{% endschema %}
