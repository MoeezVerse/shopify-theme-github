<div class="guarantee-section">
  <div class="guarantee-container">
    <div class="guarantee-logo">
      <img src="{{ section.settings.image | img_url:'master' }}" width="{{ section.settings.image_width }}" height="auto">
    </div>
    <div class="guarantee-context">
      <div class="guarantee-main-heading">
        <h2 class="guarantee-heading">{{ section.settings.heading }}</h2>
      </div>
      <div class="guarantee-text-container">
        <div class="guarantee-content">
          {{ section.settings.description }}
        </div>
        <div class="guarantee-content">
          {{ section.settings.description_text }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .guarantee-section {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    width: 90%;
    max-width: 1085px;
    margin: 0px auto;
    border-radius: 20px;
  }

  .guarantee-text-container {
    flex-basis: 50%;
  }

  .guarantee-logo {
    flex-basis: 22%;
  }

  .guarantee-container {
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    text-align: center;
    gap: 11px;
  }

  .guarantee-logo img {
    max-width: 100%;
    height: auto;
    width: 100%;
    margin-bottom: 15px;
  }

  .guarantee-heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: bold;
    margin: 0;
    line-height: 1.2;
    color: #003366;
  }

  .guarantee-content {
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
    text-align: justify;
  }
  .guarantee-context {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 25px;
      flex-basis: 75%;
  }
  .guarantee-text-container {
    flex-basis: 48%;
  }
  .bold-text {
    font-weight: bold;
  }
  .guarantee-main-heading {
    flex-basis: 55%;
  }
  
   @media (max-width: 1025px) {
     .guarantee-context {
        flex-direction: column;
        gap: 0px;
      }
   }

  @media (max-width: 768px) {
    .guarantee-heading {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }
    
    .guarantee-content {
      font-size: {{ section.settings.text_size | times: 0.9 }}px;
    }

    .guarantee-logo img {
      max-width: {{ section.settings.image_width | times: 0.8 }}px;
    }
    .guarantee-container {
      flex-direction: column;
    }
    .guarantee-container {
      gap: 0px;
    }
  }

  @media (max-width: 480px) {
    .guarantee-heading {
      font-size: {{ section.settings.heading_size | times: 0.7 }}px;
    }
    
    .guarantee-content {
      font-size: {{ section.settings.text_size | times: 0.8 }}px;
    }

    .guarantee-logo img {
      max-width: {{ section.settings.image_width | times: 0.7 }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Ev 30-Day Guarantee",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Select logo image"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Logo width (px)",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 150
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "richtext",
      "id": "description_text",
      "label": "Bold Description"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],
  "presets": [
    {
      "name": "Ev 30-Day Guarantee",
      "category": "Custom",
      "settings": {
        "bg_color": "#ffffff",
        "text_color": "#000000",
        "heading_size": 32,
        "text_size": 16,
        "image_width": 150
      }
    }
  ]
}
{% endschema %}