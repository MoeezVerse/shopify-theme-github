<div class="RS-Banner">
  <div class="RS-Main-Banner">
    {% for block in section.blocks %}
    <div class="right-banner-data">
      {% if block.type == "Data" %}
      <div class="main-bage-text">
        {% if block.settings.main-badge %}
          <img src="{{ block.settings.main-badge | img_url:"master" }}" alt="{{ }}" width="" height="">
        {% endif %}
        {% if block.settings.main-badge-text %}
          <span>{{ block.settings.main-badge-text }}</span>
        {% endif %}
      </div>
      <div class="main-heading">
        {% if block.settings.main-heading %}
          <h2>{{ block.settings.main-heading }}</h2>
        {% endif %}
      </div>
      <div class="supportive-text">
        {% if block.settings.supportive-text  %}
          <p>{{ block.settings.supportive-text }}</p>
        {% endif %}
      </div>
      <div class="informative-text">
        <div class="info infor-1">
          {% if block.settings.info-1 %}
            <img src="{{ block.settings.info-1 | img_url:"master" }}" alt="{{  }}" width="" height="" >
          {% endif %}
          {% if block.settings.info-1-text %}
            <span>{{ block.settings.info-1-text }}</span>
          {% endif %}
        </div>
        <div class="info infor-2">
          {% if block.settings.info-2 %}
            <img src="{{ block.settings.info-2 | img_url:"master" }}" alt="{{  }}" width="" height="" >
          {% endif %}
          {% if block.settings.info-2-text %}
            <span>{{ block.settings.info-2-text }}</span>
          {% endif %}
        </div>
        <div class="info infor-3">
          {% if block.settings.info-3 %}
            <img src="{{ block.settings.info-3 | img_url:"master" }}" alt="{{  }}" width="" height="" >
          {% endif %}
          {% if block.settings.info-3-text %}
            <span>{{ block.settings.info-3-text }}</span>
          {% endif %}
        </div>
        <div class="info infor-4">
          {% if block.settings.info-4 %}
            <img src="{{ block.settings.info-4 | img_url:"master" }}" alt="{{  }}" width="" height="" >
          {% endif %}
          {% if block.settings.info-4-text %}
          <span>{{ block.settings.info-4-text }}</span>
          {% endif %}
        </div>
      </div>
      <div class="btn-reviews">
        {% if block.settings.btn-text %}
        <button>{{ block.settings.btn-text }}</button>
        {% endif %}
        <div class="text-reviews">
          <div class="security-text">
            {% if block.settings.protection-icon %}
              <img src="{{ block.settings.protection-icon | img_url:"master" }}" alt="" width="" height="">
            {% endif %}
            {% if block.settings.protection-text %}
            <span>{{ block.settings.protection-text }}</span>
            {% endif %}
          </div>
          <div class="reviews">
            {% if block.settings.reviews-stars %}
              <img src="{{ block.settings.reviews-stars | img_url:"master" }}" alt="{{  }}" width="" height="">
            {% endif %}
            {% if block.settings.review-text %}
              <span>{{ block.settings.review-text }}</span>
            {% endif %}
          </div>
        </div>
      </div>
      {% endif %}
    </div>
      {%  endfor %}
    
    {% for block in section.blocks %}
      {% if block.type == "Banner" %}
    <div class="left-side-banner">
      {% if block.settings.main-banner %}
      <img src="{{ block.settings.main-banner | img_url:"master" }}" alt="" width="" height="">
      {% endif %}
    </div> 
        {% endif %}
      {% endfor %}
  </div>
</div>

<style>
.RS-Banner {
    max-width: 90%;
    margin: 20px auto;
}
.RS-Main-Banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
}
.main-bage-text {
    display: flex;
    align-items: center;
    gap: 10px;
}
.main-bage-text img {
    width: 20px;
}
.main-bage-text span {
    font-size: 15px;
    color: #000;
}
.right-banner-data .main-heading h2 {
    font-size: 37px;
    color: #000;
    font-weight: 500;
    width: 72%;
    margin: 10px 0px;
}
.supportive-text p {
    font-size: 14px;
    color: #000;
    letter-spacing: 1px;
    text-transform: capitalize;
    margin: 10px 0px;
}
.informative-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 15px;
  margin: 20px 0px;

}
.info {
    flex-basis: calc(50% - 10px);
    display: flex;
    gap: 5px;
    align-items: center;
}
.info img {
    width: auto;
    height: auto;
    object-fit: contain;
}
.info span {
  font-size: 16px;
  color: #333333; 
  font-weight: 500; 
}
.btn-reviews button {
    width: 100%;
    min-height: 46px;
    background-color: #66AEC3;
    border: none;
    max-width: 423px;
    border-radius: 8px;
    color: #fff;
    font-size: 16px;
    font-weight: bold;
}
.left-side-banner {
    max-width: 709px;
}
.left-side-banner img {
    width: 100%;
    height: auto;
}
.text-reviews {
    display: flex;
    align-items: center;
    justify-content: left;
    gap: 20px;
    margin-top: 5px;
}
.security-text {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    border-right: 1px solid #b5afaf;
    padding-right: 20px;
}
.security-text img {
    width: 13px;
    object-fit: contain;
}
.security-text span {
    font-size: 12px;
}
.reviews {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
}
.reviews img {
    width: 66px;
}
.reviews span {
    font-size: 12px;
}
@media (max-width: 768px) {
  .right-banner-data {
    padding: 0px 10px;
  }
  .main-heading {
    text-align: center;
  }
  .right-banner-data .main-heading h2 {
    width: 100%;
  }
  .main-bage-text span {
      font-size: 12px;
  }
  .RS-Main-Banner {
    flex-direction: column;
  }
  .btn-reviews {
    text-align: center;
  }
  .text-reviews {
    justify-content: center;
  }
  .security-text span {
    font-size: 10px;
  }
  .reviews span {
    font-size: 10px;
  }
  .info span {
    font-size: 10px;
  }
  .info img {
    width: 14px;
  }
  .main-bage-text {
    justify-content: center;
  }
}

@media (max-width: 430px) {
  .main-bage-text span {
    font-size: 9px;
  }
  .main-bage-text img {
    width: 16px;
  }
  .supportive-text p {
    font-size: 12px;
  }
  .text-reviews {
    gap: 5px ;
  }
  .text-reviews {
    flex-direction: column;
  }
}
</style>

