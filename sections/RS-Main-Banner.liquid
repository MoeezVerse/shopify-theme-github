          {% if block.settings.info-3 %}
            <img src="{{ block.settings.info-3 | img_url:"master" }}" alt="{{  }}" width="" height="" >
          {% endif %}
          {% if block.settings.info-3-text %}
            <span>{{ block.settings.info-3-text }}</span>
          {% endif %}
        </div>
        <div class="info infor-4">
          {% if block.settings.info-4 %}
            <img src="{{ block.settings.info-4 | img_url:"master" }}" alt="{{  }}" width="" height="" >
          {% endif %}
          {% if block.settings.info-4-text %}
          <span>{{ block.settings.info-4-text }}</span>
          {% endif %}
        </div>
      </div>
      <div class="btn-reviews">
        {% if block.settings.btn-text %}
        <button>{{ block.settings.btn-text }}</button>
        {% endif %}
        <div class="text-reviews">
          <div class="security-text">
            {% if block.settings.protection-icon %}
              <img src="{{ block.settings.protection-icon | img_url:"master" }}" alt="" width="" height="">
            {% endif %}
            {% if block.settings.protection-text %}
            <span>{{ block.settings.protection-text }}</span>
            {% endif %}
          </div>
          <div class="reviews">
            {% if block.settings.reviews-stars %}
              <img src="{{ block.settings.reviews-stars | img_url:"master" }}" alt="{{  }}" width="" height="">
            {% endif %}
            {% if block.settings.review-text %}
              <span>{{ block.settings.review-text }}</span>
            {% endif %}
          </div>
        </div>
      </div>
      {% endif %}
    </div>
      {%  endfor %}
    
    {% for block in section.blocks %}
      {% if block.type == "Banner" %}
    <div class="left-side-banner">
      {% if block.settings.main-banner %}
      <img src="{{ block.settings.main-banner | img_url:"master" }}" alt="" width="" height="">
      {% endif %}
    </div> 
        {% endif %}
      {% endfor %}
  </div>
</div>

<style>
.RS-Banner {
    max-width: 1340px;
    margin: 0px auto;
}
.RS-Main-Banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
}
.main-bage-text {
    display: flex;
    align-items: center;
    gap: 10px;
}
.main-bage-text img {
    width: 20px;
}
.main-bage-text span {
    font-size: 15px;
    color: #000;
}
.right-banner-data .main-heading h2 {
    font-size: 37px;
    color: #000;
    font-weight: 500;
    max-width: 72%;
    margin: 10px 0px;
}
.supportive-text p {
    font-size: 14px;
    color: #000;
    letter-spacing: 1px;
    text-transform: capitalize;
    margin: 10px 0px;
}
.informative-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2px solid #0099FF; /* Adjust the border color if needed */
  padding: 20px;
  border-radius: 8px;
  background-color: #ffffff; /* Background color */
}

.info {
  display: flex;
  align-items: center;
  gap: 10px; /* Space between the icon and text */
}

.info img {
  width: 24px; /* Adjust the icon size */
  height: 24px;
}

.info span {
  font-size: 16px; /* Adjust font size */
  color: #333333; /* Text color */
  font-weight: 500; /* Adjust font weight if needed */
}

.info:nth-child(2n) {
  border-left: 1px solid #d3d3d3; /* Adds a divider between info sections */
  padding-left: 20px;
}

.left-side-banner {
    max-width: 709px;
}
.left-side-banner img {
    width: 100%;
    height: auto;
}
</style>

