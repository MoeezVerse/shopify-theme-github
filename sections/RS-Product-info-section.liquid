<div class="rs-product-infromation" style="background-image: url({{ section.settings.Background-image | img_url:'master' }});">
  
  <div class="product-info-main">
    {% for block in section.blocks %}
    <div class="product-image">
      {% if block.settings.product-image %}
        <img src="{{ block.settings.product-image | img_url:'master' }}" alt="" width="" height="">
      {% endif %}
    </div>
    {% endfor %}
    {% for block in section.blocks %}
    {% if block.type == 'Data' %}
    <div class="product-information">
      <h2 class="product-main-title">{{ block.settings.btn-heading }}</h2>
      <p class="product-detailed">{{ block.settings.btn-para }}</p>
      <div class="btn-reviews">
        {% if block.settings.btn-text %}
        <button>{{ block.settings.btn-text }}</button>
        {% endif %}
        <div class="text-reviews">
          <div class="security-text">
            {% if block.settings.protection-icon %}
              <img src="{{ block.settings.protection-icon | img_url:"master" }}" alt="" width="" height="">
            {% endif %}
            {% if block.settings.protection-text %}
            <span>{{ block.settings.protection-text }}</span>
            {% endif %}
          </div>
          <div class="reviews">
            {% if block.settings.reviews-stars %}
              <img src="{{ block.settings.reviews-stars | img_url:"master" }}" alt="{{  }}" width="" height="">
            {% endif %}
            {% if block.settings.review-text %}
              <span>{{ block.settings.review-text }}</span>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
      {% endif %}
    {% endfor %}
  </div>
    
</div>

<style>
.product-info-main {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 70px;
    padding: 30px;
}
.product-information {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 14px;
    color: #fff;
}
.product-information h2.product-main-title {
    color: #fff;
    text-transform: uppercase;
    font-weight: bolder;
    margin: 0px;
    max-width: 55%;
    font-size: 35px;
}
p.product-detailed {
    margin: 0px;
    max-width: 67%;
}
</style>
{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
          "type": "image_picker",
          "id": "Background-image",
          "label": "Select The Background Image"
      }
    ],
    "blocks": [
    {
      "type": "Data",
      "name": "Product Information",
      "settings": [
        {
          "type": "text",
          "id": "btn-heading",
          "label": "Enter Your Text",
          "default": "experience THE sound approved by experts."
        },
        {
          "type": "text",
          "id": "btn-para",
          "label": "Enter Your Text",
          "default": "Hear what a sound expert had to say about Rocksteady and what you can expect too.  "
        },
        {
          "type": "text",
          "id": "btn-text",
          "label": "Enter Your Text",
          "default": "Build Your Sound System"
        },
        {
            "type": "image_picker",
            "id": "protection-icon",
            "label": "Select The Icon"
        },
        {
          "type": "text",
          "id": "protection-text",
          "label": "Enter Your Text",
          "default": " Shopify Secure Checkout"
        },
        {
            "type": "image_picker",
            "id": "reviews-stars",
            "label": "Select The Icon"
        },
        {
          "type": "text",
          "id": "review-text",
          "label": "Enter Your Text",
          "default": "500+ 5 Star Reviews Online"
        }
        
      ]
    },
    {
      "type": "Image",
      "name": "Product Image",
      "settings": [
        {
            "type": "image_picker",
            "id": "product-image",
            "label": "Select The Product Image"
        }
      ]
    }
  ],
    "presets": [
    {
      "name": "Rock Steady Product Information"
    }
  ]
  }
{% endschema %}