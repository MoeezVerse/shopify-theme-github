<div class="rs-product-information" style="background-image: url({{ section.settings.Background-image | img_url: 'master' }});">
  {% for block in section.blocks %}
    {% if block.type == 'Data' %}
      <div class="product-info-main">
        
        <!-- Product Image Section -->
        <div class="product-image">
          {% if block.settings.product-image %}
            <img src="{{ block.settings.product-image | img_url: 'master' }}" alt="Product Image">
            <div class="play-icon">
              <!-- Optional Play Button -->
              <img src="{{ 'play-icon.svg' | asset_url }}" alt="Play Video">
            </div>
          {% endif %}
        </div>

        <!-- Product Information Section -->
        <div class="product-information">
          <h2 class="product-main-title">{{ block.settings.btn-heading }}</h2>
          <p class="product-detailed">{{ block.settings.btn-para }}</p>
          
          <button class="btn-action">
            {{ block.settings.btn-text }}
          </button>

          <div class="text-reviews">
            <div class="security-text">
              {% if block.settings.protection-icon %}
                <img src="{{ block.settings.protection-icon | img_url: 'master' }}" alt="Secure Checkout">
              {% endif %}
              {% if block.settings.protection-text %}
                <span>{{ block.settings.protection-text }}</span>
              {% endif %}
            </div>
            <div class="reviews">
              {% if block.settings.reviews-stars %}
                <img src="{{ block.settings.reviews-stars | img_url: 'master' }}" alt="Reviews Stars">
              {% endif %}
              {% if block.settings.review-text %}
                <span>{{ block.settings.review-text }}</span>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>


<style>
.rs-product-infromation {
  width: 90%;
  margin: 0px auto;
}
.rs-product-information {
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: cover;
  background-position: center;
  padding: 20px 0;
}

.product-info-main {
  display: flex;
  max-width: 1200px;
  gap: 30px;
  align-items: center;
}

.product-image {
  flex: 1;
  position: relative;
}

.product-image img {
  display: block;
  max-width: 100%;
  border-radius: 8px;
}

.play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  padding: 10px;
}

.play-icon img {
  width: 24px;
  height: 24px;
}

.product-information {
  flex: 1;
  color: white;
  text-align: left;
}

.product-main-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 10px;
}

.product-detailed {
  font-size: 16px;
  margin-bottom: 20px;
}

.btn-action {
  background-color: #00aaff;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  cursor: pointer;
  text-transform: uppercase;
}

.btn-action:hover {
  background-color: #008fcc;
}

.text-reviews {
  display: flex;
  align-items: center;
  gap: 20px;
  margin-top: 15px;
}

.security-text,
.reviews {
  display: flex;
  align-items: center;
  gap: 10px;
}

.security-text img,
.reviews img {
  width: 20px;
  height: 20px;
}

.text-reviews span {
  font-size: 14px;
  color: white;
}

</style>
{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
          "type": "image_picker",
          "id": "Background-image",
          "label": "Select The Background Image"
      }
    ],
    "blocks": [
    {
      "type": "Data",
      "name": "Product Information",
      "settings": [
        {
          "type": "text",
          "id": "btn-heading",
          "label": "Enter Your Text",
          "default": "experience THE sound approved by experts."
        },
        {
          "type": "text",
          "id": "btn-para",
          "label": "Enter Your Text",
          "default": "Hear what a sound expert had to say about Rocksteady and what you can expect too.  "
        },
        {
          "type": "text",
          "id": "btn-text",
          "label": "Enter Your Text",
          "default": "Build Your Sound System"
        },
        {
            "type": "image_picker",
            "id": "protection-icon",
            "label": "Select The Icon"
        },
        {
          "type": "text",
          "id": "protection-text",
          "label": "Enter Your Text",
          "default": " Shopify Secure Checkout"
        },
        {
            "type": "image_picker",
            "id": "reviews-stars",
            "label": "Select The Icon"
        },
        {
          "type": "text",
          "id": "review-text",
          "label": "Enter Your Text",
          "default": "500+ 5 Star Reviews Online"
        }
        
      ]
    },
    {
      "type": "Image",
      "name": "Product Image",
      "settings": [
        {
            "type": "image_picker",
            "id": "product-image",
            "label": "Select The Product Image"
        }
      ]
    }
  ],
    "presets": [
    {
      "name": "Rock Steady Product Information"
    }
  ]
  }
{% endschema %}