<!-- featured-categories.liquid -->
<section class="featured-categories">
  <div class="container">
    <h2 class="section-title">{{ section.settings.heading }}</h2>
    <div class="categories-grid">
      {% for block in section.blocks %}
        <div class="category-item">
          <img src="{{ block.settings.image | image_url: 'master' }}" alt="{{ block.settings.title }}" class="category-image" width="" height=""> 
          <h3 class="category-title">{{ block.settings.title }}</h3>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
/* Featured Categories Section Styling */
.featured-categories {
  text-align: center;
  padding: 40px 0;
}

.featured-categories .section-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 30px;
}

.featured-categories .categories-grid {
  display: flex;
  justify-content: space-between;
  gap: 20px;
  flex-wrap: wrap;
}

.featured-categories .category-item {
  flex: 1 1 22%;
  text-align: center;
  max-width: 250px;
  transition: transform 0.3s ease;
}

.featured-categories .category-item:hover {
  transform: scale(1.05); /* Slightly increase the size on hover */
}

.featured-categories .category-item img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  transition: transform 0.3s ease; /* Smooth transition for the pop-up effect */
}

.featured-categories .category-item img:hover {
  transform: scale(1.1); /* Image pop-up effect */
}

.featured-categories .category-title {
  font-size: 16px;
  font-weight: bold;
  margin-top: 10px;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .featured-categories .categories-grid {
    flex-direction: column;
    align-items: center;
  }

  .featured-categories .category-item {
    max-width: 80%;
    margin-bottom: 20px;
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  .featured-categories .category-item {
    flex: 1 1 45%;
  }
}

</style>

{% schema %}
{
  "name": "Featured Categories",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Featured Categories"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Categories",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
