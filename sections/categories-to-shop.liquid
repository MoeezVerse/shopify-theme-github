<div class="category-circles-section category-circle-section-{{ section.id }}">
  <h2 class="a1-custom-flyer-heading">{{ section.settings.heading_text }}</h2>
  <div class="category-circles-container">
    {% for block in section.blocks %}
      <div onclick="window.location.href='{{ block.settings.category_link }}'" 
           style="background-color: {{ block.settings.background_color }};" 
           class="category-circles">
        {% if block.settings.category_image %}
          <div class="circle-image" 
               style="background-image: url({{ block.settings.category_image | img_url: 'master' }});">
          </div>
        {% endif %}
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .category-circle-section-{{ section.id }} {
    text-align: center;
    max-width: 90%;
    margin: 40px auto;
  }
  .category-circle-section-{{ section.id }} .category-circles-section h2 {
    font-size: 30px;
    margin-bottom: 1rem;
  }
  .category-circle-section-{{ section.id }} .category-circles-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin: auto;
  }
  .category-circle-section-{{ section.id }} .category-circles {
    text-align: center;
    width: 150px;
    cursor: pointer;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-radius: 5px;
  }
  .category-circle-section-{{ section.id }} .category-circles .circle-image {
    width: 120px;
    height: 100px;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    margin: 0 auto;
  }
  .category-circle-section-{{ section.id }} .category-circles p {
    margin: 15px 0px 0px 0px;
    font-size: 15px;
    color: black;
    font-weight: 500;
    padding: 0px 10px;
  }
  .category-circles-section-{{ section.id }}  .slick-track {
    display: flex;
    align-items: stretch;
  }
  .category-circles-container .slick-slide {
    padding: 0 10px;
    margin: 10px;
    width: 200px ;
    height: 200px;
  }
  .category-circles-container .class-to-style.custom-left {
    top: 40%;
    left: -25px;
  }
  .category-circles-container .class-to-style.custom-right {
    right: -25px;
    top: 40%;
  }
  @media (max-width: 768px) {
    .category-circles-section-{{ section.id }}  .category-circle {
        text-align: center;
        padding: 18px 4px;
        margin: 0px 10px;
    }
    .category-circles-section-{{ section.id }} {
      width: 100% !important;
    }
    .category-circles-section-{{ section.id }} .slick-track {
      display: flex;
      gap: 10px;
    }
    .category-circles-container .slick-slide {
      padding: 0 5px;
      margin: 0px 15px;
    }
    .category-circles-container .class-to-style.custom-left {
      left: -15px;
    }
    .category-circles-container .class-to-style.custom-right {
      right: 0px;
    }
}

@media (min-width: 768px) {
  .category-circles-section-{{ section.id }} .category-circle {
      background: #9090a2;
      padding: 22px 4px;
      margin: 0px 10px;
  }
}
</style>

<script>
    $(document).ready(function(){
      $('.category-circles-container').slick({
        infinite: true,
        slidesToShow: 7,
        slidesToScroll: 1,
        autoplaySpeed: 1000,
        lazyLoad: 'ondemand',
        arrows: true,  // Enable navigation arrow
        prevArrow: '<div class="class-to-style custom-left"><span class="fa fa-angle-left"></span><span class="sr-only">Prev</span></div>',
        nextArrow: '<div class="class-to-style custom-right"><span class="fa fa-angle-right"></span><span class="sr-only">Next</span></div>',
        responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: 4,
              slidesToScroll: 3,
              infinite: true,
              autoplaySpeed: 1000,
              arrows: true
            }
          },
          {
            breakpoint: 769,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 2,
              infinite: true,
              autoplaySpeed: 1000,
              arrows: true
            }
          },
          {
            breakpoint: 600,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 2,
              infinite: true,
              autoplaySpeed: 1000,
              arrows: true
            }
          },
          {
            breakpoint: 430,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1,
              infinite: true,
              autoplaySpeed: 1000,
              arrows: false
            }
          }
        ]
      })
      });
</script>
{% schema %}
{
  "name": "Categories to shop",
  "settings": [
    {
      "type": "text",
      "id": "custom-class",
      "label": "Custom Class"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Section Heading"
    }
  ],
  "blocks": [
    {
      "type": "Category",
      "name": "Category",
      "settings": [
        {
            "type": "color",
            "id": "background_color",
            "label": "Select Background Color"
        },
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "categories image"
        },
        {
            "type": "text",
            "id": "text",
            "label": "Enter your text",
            "default": "Grocery"
        },
        {
          "type": "url",
          "id": "category_link",
          "label": "Category Link"
        }

      ]
    }
  ],
  "presets": [
    {
      "name": "Categories to shop"
    }
  ]
}
{% endschema %}