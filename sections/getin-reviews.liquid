{%- style -%}
  .review-section-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    background-color: {{ section.settings.background_color }};
    text-align: {{ section.settings.text_alignment }};
  }

  .review-section-{{ section.id }} .review-header {
    margin-bottom: {{ section.settings.header_spacing }}px;
  }

  .review-section-{{ section.id }} .trust-badge {
    max-width: {{ section.settings.trust_badge_width }}px;
    margin: 0 auto {{ section.settings.trust_badge_spacing }}px;
  }

  .review-section-{{ section.id }} .review-container {
    display: grid;
    grid-template-columns: repeat({{ section.settings.reviews_per_row }}, 1fr);
    gap: {{ section.settings.review_spacing }}px;
    margin-top: {{ section.settings.reviews_top_spacing }}px;
  }

  .review-section-{{ section.id }} .review-item {
    background: {{ section.settings.review_background }};
    padding: {{ section.settings.review_padding }}px;
    border-radius: {{ section.settings.review_border_radius }}px;
  }

  .review-section-{{ section.id }} .review-image {
    width: {{ section.settings.review_image_size }}px;
    height: {{ section.settings.review_image_size }}px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto {{ section.settings.review_image_spacing }}px;
  }

  .review-section-{{ section.id }} .review-stars {
    width: {{ section.settings.star_size }}px;
    margin-bottom: {{ section.settings.star_spacing }}px;
  }

  .review-section-{{ section.id }} .review-subheading {
    color: {{ section.settings.subheading_color }};
    font-size: {{ section.settings.subheading_size }}px;
    margin-bottom: {{ section.settings.subheading_spacing }}px;
  }

  @media screen and (max-width: 768px) {
    .review-section-{{ section.id }} .review-container {
      grid-template-columns: 1fr;
    }
    
    .review-section-{{ section.id }} {
      padding: {{ section.settings.mobile_padding_top }}px {{ section.settings.mobile_padding_right }}px {{ section.settings.mobile_padding_bottom }}px {{ section.settings.mobile_padding_left }}px;
    }
  }
{%- endstyle -%}

<div class="review-section-{{ section.id }}">
  <div class="review-header">
    {%- if section.settings.star_image != blank -%}
      <img src="{{ section.settings.star_image | img_url: '300x' }}" alt="Star rating" class="review-stars">
    {%- endif -%}
    
    {%- if section.settings.review_count != blank -%}
      <p>{{ section.settings.review_count }}</p>
    {%- endif -%}
    
    {%- if section.settings.trust_badge != blank -%}
      <img src="{{ section.settings.trust_badge | img_url: '800x' }}" alt="Trust badge" class="trust-badge">
    {%- endif -%}
    
    {%- if section.settings.heading != blank -%}
      <h2>{{ section.settings.heading }}</h2>
    {%- endif -%}
  </div>

  <div class="review-container">
    {%- for block in section.blocks -%}
      <div class="review-item" {{ block.shopify_attributes }}>
        {%- if block.settings.customer_image != blank -%}
          <img src="{{ block.settings.customer_image | img_url: '300x300' }}" alt="{{ block.settings.customer_name }}" class="review-image">
        {%- endif -%}
        
        <div class="review-content">
          {%- if block.settings.customer_name != blank -%}
            <h3>{{ block.settings.customer_name }}</h3>
          {%- endif -%}
          
          {%- if section.settings.star_image != blank -%}
            <img src="{{ section.settings.star_image | img_url: '300x' }}" alt="Star rating" class="review-stars">
          {%- endif -%}
          
          {%- if block.settings.subheading != blank -%}
            <h4 class="review-subheading">{{ block.settings.subheading }}</h4>
          {%- endif -%}
          
          {%- if block.settings.review_text != blank -%}
            <p>{{ block.settings.review_text }}</p>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

