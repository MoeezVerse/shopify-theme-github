{%- style -%}
  .ev-review-section {
    padding: {{ section.settings.padding }}px 20px;
    background-color: {{ section.settings.background_color }};
    text-align: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ev-review-header {
    margin-bottom: 40px;
  }

  .ev-trust-badge {
    max-width: 200px;
    margin: 20px auto;
  }

  .ev-review-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin-top: 30px;
  }

  .ev-review-item {
    background: #f9f9f9;
    padding: 30px;
    border-radius: 10px;
    text-align: left;
    flex: 1 1 300px;
    max-width: 350px;
  }

  .ev-review-image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 15px;
  }

  .ev-review-stars {
    width: 100px;
    margin-bottom: 10px;
  }

  .ev-review-subheading {
    color: #333;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
    position: relative;
    padding-left: 20px;
  }

  .ev-review-subheading:before {
    content: "-";
    position: absolute;
    left: 0;
  }

  .ev-review-section h2 {
    font-size: 28px;
    margin: 20px 0;
  }

  .ev-review-section h3 {
    font-size: 18px;
    margin-bottom: 5px;
  }

  @media screen and (max-width: 768px) {
    .ev-review-item {
      flex: 1 1 100%;
      max-width: 100%;
    }
    
    .ev-review-section {
      padding: 30px 15px;
    }
  }
{%- endstyle -%}

<div class="ev-review-section">
  <div class="ev-review-header">
    {%- if section.settings.star_image != blank -%}
      <img src="{{ section.settings.star_image | img_url: '300x' }}" alt="Star rating" class="ev-review-stars">
    {%- endif -%}
    
    {%- if section.settings.review_count != blank -%}
      <p>{{ section.settings.review_count }}</p>
    {%- endif -%}
    
    {%- if section.settings.trust_badge != blank -%}
      <img src="{{ section.settings.trust_badge | img_url: '800x' }}" alt="Trust badge" class="ev-trust-badge">
    {%- endif -%}
    
    {%- if section.settings.heading != blank -%}
      <h2>{{ section.settings.heading }}</h2>
    {%- endif -%}
  </div>

  <div class="ev-review-container">
    {%- for block in section.blocks -%}
      <div class="ev-review-item" {{ block.shopify_attributes }}>
        {%- if block.settings.customer_image != blank -%}
          <img src="{{ block.settings.customer_image | img_url: '300x300' }}" alt="{{ block.settings.customer_name }}" class="ev-review-image">
        {%- endif -%}
        
        <div class="ev-review-content">
          {%- if block.settings.customer_name != blank -%}
            <h3>{{ block.settings.customer_name }}</h3>
          {%- endif -%}
          
          {%- if section.settings.star_image != blank -%}
            <img src="{{ section.settings.star_image | img_url: '300x' }}" alt="Star rating" class="ev-review-stars">
          {%- endif -%}
          
          {%- if block.settings.subheading != blank -%}
            <h4 class="ev-review-subheading">{{ block.settings.subheading }}</h4>
          {%- endif -%}
          
          {%- if block.settings.review_text != blank -%}
            <p>{{ block.settings.review_text }}</p>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

