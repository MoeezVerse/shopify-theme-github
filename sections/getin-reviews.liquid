{% schema %}
{
  "name": "Trustpilot Testimonials",
  "tag": "section",
  "class": "ev-testimonial-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "star_image",
      "label": "Star Rating Image"
    },
    {
      "type": "text",
      "id": "review_count",
      "label": "Review Count Text",
      "default": "9507 Reviews"
    },
    {
      "type": "image_picker",
      "id": "trustpilot_logo",
      "label": "Trustpilot Logo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Join over 1 million women worldwide"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Reviewer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Reviewer Name",
          "default": "Jane Doe"
        },
        {
          "type": "image_picker",
          "id": "star_image_inline",
          "label": "Inline Star Rating Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Review Title",
          "default": "Amazing!"
        },
        {
          "type": "textarea",
          "id": "review",
          "label": "Review Text",
          "default": "This product changed everything for me."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "EV - Trustpilot Testimonials",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}

{% style %}
.ev-testimonial-section {
  background-color: #f6f6f6;
  padding: 40px 20px;
  text-align: center;
}
.ev-rating-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin-bottom: 12px;
}
.ev-rating-header img {
  height: 20px;
}
.ev-section-heading {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 40px;
}
.ev-testimonial-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
}
@media(min-width: 768px) {
  .ev-testimonial-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
.ev-card {
  background: #fff;
  border-radius: 14px;
  padding: 20px;
  text-align: left;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}
.ev-card img.ev-image {
  width: 100%;
  border-radius: 12px;
  object-fit: cover;
  margin-bottom: 15px;
}
.ev-card .ev-name {
  font-weight: bold;
  font-size: 16px;
  display: flex;
  align-items: center;
  gap: 6px;
  margin-bottom: 8px;
}
.ev-card .ev-inline-star {
  height: 16px;
}
.ev-card .ev-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 6px;
}
.ev-card .ev-review {
  font-size: 15px;
  color: #333;
  line-height: 1.5;
}
{% endstyle %}

<div class="ev-testimonial-section">
  <div class="ev-rating-header">
    {% if section.settings.star_image %}
      <img src="{{ section.settings.star_image | image_url }}" alt="Stars" />
    {% endif %}
    <span>{{ section.settings.review_count }}</span>
    {% if section.settings.trustpilot_logo %}
      <img src="{{ section.settings.trustpilot_logo | image_url }}" alt="Trustpilot" />
    {% endif %}
  </div>

  <h2 class="ev-section-heading">{{ section.settings.heading }}</h2>

  <div class="ev-testimonial-grid">
    {% for block in section.blocks %}
      <div class="ev-card">
        {% if block.settings.image %}
          <img class="ev-image" src="{{ block.settings.image | image_url }}" alt="{{ block.settings.name }}">
        {% endif %}
        <div class="ev-name">
          {{ block.settings.name }}
          {% if block.settings.star_image_inline %}
            <img class="ev-inline-star" src="{{ block.settings.star_image_inline | image_url }}" alt="Star Rating">
          {% endif %}
        </div>
        <div class="ev-title">{{ block.settings.title }}</div>
        <div class="ev-review">{{ block.settings.review }}</div>
      </div>
    {% endfor %}
  </div>
</div>
