 {% schema %}
{
  "name": "EV - Testimonials Section",
  "tag": "section",
  "class": "ev-testimonial-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "trustpilot_logo",
      "label": "Trustpilot Logo"
    },
    {
      "type": "image_picker",
      "id": "star_rating_image",
      "label": "Star Rating Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join over 1 million women worldwide"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "reviewer_image",
          "label": "Reviewer Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Reviewer Name",
          "default": "Reviewer"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Review Title",
          "default": "Amazing Product!"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text",
          "default": "This product changed my life. Highly recommend it!"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "EV - Testimonials",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
.ev-testimonial-wrapper {
  background-color: #f6f6f6;
  padding: 40px 20px;
  text-align: center;
}
.ev-testimonial-wrapper .ev-heading {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 10px;
}
.ev-rating-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin-bottom: 20px;
}
.ev-testimonial-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
  margin-top: 30px;
}
@media (min-width: 768px) {
  .ev-testimonial-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
.ev-card {
  background: white;
  padding: 20px;
  border-radius: 10px;
  text-align: left;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.ev-card img.ev-reviewer-img {
  width: 100%;
  border-radius: 10px;
  object-fit: cover;
  margin-bottom: 15px;
}
.ev-card .ev-name {
  font-weight: bold;
  margin-bottom: 5px;
}
.ev-card .ev-star {
  height: 18px;
  margin-bottom: 10px;
}
.ev-card .ev-title {
  font-weight: 600;
  margin-bottom: 8px;
}
.ev-card .ev-text {
  font-size: 15px;
  color: #444;
}
{% endstyle %}

<div class="ev-testimonial-wrapper">
  <div class="ev-rating-wrapper">
    {% if section.settings.star_rating_image %}
      <img src="{{ section.settings.star_rating_image | img_url:'master' }}" alt="Rating Stars" class="ev-star" />
    {% endif %}
    <h2 class="ev-heading">{{ section.settings.heading }}</h2>
    {% if section.settings.trustpilot_logo %}
      <img src="{{ section.settings.trustpilot_logo | img_url:'master' }}" alt="Trustpilot Logo" height="20" />
    {% endif %}
  </div>
  

  <div class="ev-testimonial-grid">
    {% for block in section.blocks %}
      {% if block.type == 'testimonial' %}
        <div class="ev-card">
          {% if block.settings.reviewer_image %}
            <img src="{{ block.settings.reviewer_image | image_url }}" class="ev-reviewer-img" alt="{{ block.settings.name }}">
          {% endif %}
          <div class="ev-name">{{ block.settings.name }}</div>
          {% if settings.star_rating_image %}
            <img src="{{ settings.star_rating_image | image_url }}" class="ev-star" alt="Star Rating" />
          {% endif %}
          <div class="ev-title">{{ block.settings.title }}</div>
          <div class="ev-text">{{ block.settings.text }}</div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
