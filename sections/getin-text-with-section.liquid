{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .text-with-video-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: {{ section.settings.section_max_width }}px;
    margin: 0 auto;
  }

  @media screen and (min-width: 990px) {
    .text-with-video-{{ section.id }} {
      flex-direction: {{ section.settings.layout_direction }};
      align-items: center;
    }
  }

  .text-with-video__text {
    flex: 1;
    padding: 0 1.5rem;
  }

  .text-with-video__video {
    flex: 1;
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: {{ section.settings.video_border_radius }}px;
  }

  .text-with-video__video iframe,
  .text-with-video__video video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .text-with-video__heading {
    font-size: {{ section.settings.heading_font_size_mobile }}px;
    color: {{ section.settings.heading_color }};
    margin-bottom: {{ section.settings.heading_margin_bottom }}px;
    line-height: 1.2;
  }

  @media screen and (min-width: 750px) {
    .text-with-video__heading {
      font-size: {{ section.settings.heading_font_size_desktop }}px;
    }
  }

  .text-with-video__subheading {
    font-size: {{ section.settings.subheading_font_size_mobile }}px;
    color: {{ section.settings.subheading_color }};
    margin-bottom: {{ section.settings.subheading_margin_bottom }}px;
    line-height: 1.5;
  }

  @media screen and (min-width: 750px) {
    .text-with-video__subheading {
      font-size: {{ section.settings.subheading_font_size_desktop }}px;
    }
  }

  /* Star Rating Styles */
  .text-with-video__rating {
    display: flex;
    align-items: center;
    margin-bottom: {{ section.settings.rating_margin_bottom }}px;
    gap: 8px;
  }

  .text-with-video__stars {
    display: flex;
    gap: 2px;
  }

  .text-with-video__star {
    color: {{ section.settings.star_color }};
    font-size: {{ section.settings.star_size }}px;
  }

  .text-with-video__star--empty {
    color: {{ section.settings.star_empty_color }};
  }

  .text-with-video__review-text {
    font-size: {{ section.settings.review_text_size }}px;
    color: {{ section.settings.review_text_color }};
  }

  /* Features Block Styles */
  .text-with-video__features {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.feature_gap }}px;
    margin-bottom: {{ section.settings.features_margin_bottom }}px;
  }

  .text-with-video__feature {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .text-with-video__feature-icon {
    flex-shrink: 0;
    width: {{ section.settings.feature_icon_size }}px;
    height: {{ section.settings.feature_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .text-with-video__feature-icon svg {
    width: 100%;
    height: 100%;
    fill: {{ section.settings.feature_icon_color }};
  }

  .text-with-video__feature-text {
    font-size: {{ section.settings.feature_font_size_mobile }}px;
    color: {{ section.settings.feature_text_color }};
    line-height: 1.4;
  }

  .text-with-video__feature-text strong {
    color: {{ section.settings.feature_highlight_color }};
  }

  @media screen and (min-width: 750px) {
    .text-with-video__feature-text {
      font-size: {{ section.settings.feature_font_size_desktop }}px;
    }
  }

  /* Divider Styles */
  .text-with-video__divider {
    width: 100%;
    height: {{ section.settings.divider_thickness }}px;
    background-color: {{ section.settings.divider_color }};
    margin: {{ section.settings.divider_margin_y }}px 0;
  }

  /* Offer Block Styles */
  .text-with-video__offer {
    margin-top: {{ section.settings.offer_margin_top }}px;
    padding: {{ section.settings.offer_padding }}px;
    background-color: {{ section.settings.offer_background_color }};
    border-radius: {{ section.settings.offer_border_radius }}px;
    text-align: center;
    border: {{ section.settings.offer_border_thickness }}px solid {{ section.settings.offer_border_color }};
  }

  .text-with-video__offer-heading {
    font-size: {{ section.settings.offer_heading_font_size_mobile }}px;
    color: {{ section.settings.offer_heading_color }};
    margin-bottom: {{ section.settings.offer_heading_margin_bottom }}px;
    line-height: 1.3;
  }

  @media screen and (min-width: 750px) {
    .text-with-video__offer-heading {
      font-size: {{ section.settings.offer_heading_font_size_desktop }}px;
    }
  }

  .text-with-video__offer-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-weight: {{ section.settings.button_font_weight }};
    font-size: {{ section.settings.button_font_size_mobile }}px;
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: {{ section.settings.button_border_thickness }}px solid {{ section.settings.button_border_color }};
  }

  .text-with-video__offer-button:hover {
    background-color: {{ section.settings.button_hover_background_color }};
    color: {{ section.settings.button_hover_text_color }};
    transform: translateY(-2px);
    border-color: {{ section.settings.button_hover_border_color }};
  }

  @media screen and (min-width: 750px) {
    .text-with-video__offer-button {
      font-size: {{ section.settings.button_font_size_desktop }}px;
    }
  }
{%- endstyle -%}

<div class="page-width">
  <div class="text-with-video-{{ section.id }}">
    <div class="text-with-video__text">
      {%- if section.settings.heading != blank -%}
        <h2 class="text-with-video__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="text-with-video__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.show_rating -%}
        <div class="text-with-video__rating">
          <div class="text-with-video__stars">
            {%- for i in (1..5) -%}
              {%- if i <= section.settings.rating -%}
                <span class="text-with-video__star">★</span>
              {%- else -%}
                <span class="text-with-video__star text-with-video__star--empty">★</span>
              {%- endif -%}
            {%- endfor -%}
          </div>
          {%- if section.settings.review_text != blank -%}
            <span class="text-with-video__review-text">{{ section.settings.review_text }}</span>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="text-with-video__features">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'feature' -%}
                <div class="text-with-video__feature" {{ block.shopify_attributes }}>
                  {%- if block.settings.icon != 'none' -%}
                    <div class="text-with-video__feature-icon">
                      {%- render 'icon', name: block.settings.icon -%}
                    </div>
                  {%- endif -%}
                  <div class="text-with-video__feature-text">{{ block.settings.text }}</div>
                </div>
              {%- when 'divider' -%}
                <div class="text-with-video__divider" {{ block.shopify_attributes }}></div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- endif -%}

      {%- if section.settings.offer_heading != blank -%}
        <div class="text-with-video__offer">
          <h3 class="text-with-video__offer-heading">{{ section.settings.offer_heading }}</h3>
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="text-with-video__offer-button">
              {{ section.settings.button_label }}
            </a>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>

    <div class="text-with-video__video">
      {%- if section.settings.video_url.type == 'youtube' -%}
        <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?autoplay={{ section.settings.autoplay }}&mute={{ section.settings.mute }}&loop={{ section.settings.loop }}&controls={{ section.settings.show_controls }}" frameborder="0" allowfullscreen></iframe>
      {%- elsif section.settings.video_url.type == 'vimeo' -%}
        <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}?autoplay={{ section.settings.autoplay }}&muted={{ section.settings.mute }}&loop={{ section.settings.loop }}&controls={{ section.settings.show_controls }}" frameborder="0" allowfullscreen></iframe>
      {%- elsif section.settings.uploaded_video != blank -%}
        <video autoplay="{{ section.settings.autoplay }}" muted="{{ section.settings.mute }}" loop="{{ section.settings.loop }}" controls="{{ section.settings.show_controls }}">
          <source src="{{ section.settings.uploaded_video }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {%- else -%}
        <div class="placeholder-video" style="background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; height: 100%;">
          <p>Add a video in the section settings</p>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

