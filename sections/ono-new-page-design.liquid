<div class="ono-row">
    <h2 class="row-heading">{{ section.settings.tile-name }}</h2>
    <p class="row-text">{{ section.settings.title-text }}</p>
  <div class="row-main-data">
    {% for block in section.blocks %}
    <div class="main-inner-data-row blue grey">
      <div class="image-row">
        <img src="{{ block.settings.product-image | img_url:"master" }}" alt="product-image" width="166" height="203">
      </div>
      <div class="data-row">
        <h2>{{ block.settings.product-title }}</h2>
        <div class="inner-data-row">
          <div class="row-data-1">
            <h3>{{ block.settings.product-1 }}</h3>
            <p>{{ block.settings.product-pr-1 }}</p>
          </div>
          <div class="row-data-1">
            <h3>{{ block.settings.product-2 }}</h3>
            <p>{{block.settings.product-pr-2 }}</p>
          </div>
          <div class="row-data-1">
            <h3>{{ block.settings.product-3 }}</h3>
            <p>{{ block.settings.product-pr-3 }}</p>
          </div>
          <div class="row-data-1">
            <h3>{{ block.settings.product-4 }}</h3>
            <p>{{ block.settings.product-pr-4 }}</p>
          </div>
        </div>
        <a href="{{ block.settings.url-product }}">
          <button class="row-btn">{{ block.settings.btn-text }}</button>
        </a>
        
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<style>
.ono-row {
    width: 90%;
    margin: 60px auto;
}
h2.row-heading {
    text-align: center;
    font-size: 30px;
    font-weight: bold;
    color: #2F358E;
}
p.row-text {
    text-align: center;
    width: 60%;
    margin: 0px auto;
    font-size: 14px;
}
.row-main-data{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}
.main-inner-data-row {
    position: relative;
    max-width: 346px;
    max-height: 100%;
    margin-top: 100px;
    border-radius: 6%;
    border: 3px solid #FFAB3B;
    background-color: #ffff;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
}
.main-inner-data-row:nth-child(2) {
    border-color: #2F358E;
}

.main-inner-data-row:nth-child(3) {
    border-color: #A0A0A0;
}
.main-inner-data-row .image-row {
    position: absolute;
    top: -107px;
    left: 80px;
}
.data-row {
    padding: 40px 31px;
    text-align: center;
}
.data-row h2 {
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    color: #2F358E;
}
.inner-data-row .row-data-1 h3 {
    font-size: 16px;
    text-align: center;
    color: #000;
    font-weight: bold;
}
.inner-data-row .row-data-1 p {
    text-align: center;
}
.main-inner-data-row button.row-btn {
    max-width: 271px;
    height: 53px;
    background-color: #F7B101;
    border: none;
    padding: 10px 30px;
    border-radius: 29px;
}
@media screen and (max-width: 768px) {
  .row-main-data {
    flex-direction: column;
  }
}
</style>

